<!DOCTYPE html>
<html lang="en">
  <%-include("./partials/head.ejs", { user: user})%>

  <body>
    <div class="row">
      <div class="col-2">
        <%-include("./partials/navbar.ejs", { user: user})%>
      </div>
    </div>
    <div class="row justify-content-center">
      <h1 style="margin-bottom: 100px">Sign Up</h1>
    </div>
    <div class="container-fullwidth">
      <form action="" method="POST">
        <div class="row justify-content-center">
          <div class="col-1" style="margin: 10px">
            <label for="username">Username</label>
          </div>
          <div class="col-3">
            <input
              type="text"
              class="form-control"
              placeholder="First name"
              name="username"
              style="margin: 10px"
            />
            <!-- <input name="username" placeholder="username" type="text" /> -->
          </div>
        </div>

        <!--  -->

        <div class="row justify-content-center">
          <div class="col-1" style="margin: 10px">
            <label for="password">Password</label>
          </div>
          <div class="col-3">
            <!-- <input name="password" type="password" /> -->
            <input
              type="text"
              class="form-control"
              placeholder="Password"
              name="password"
              style="margin: 10px"
            />
          </div>
        </div>

        <!--  -->

        <!--  -->
        <div class="row justify-content-center">
          <div class="col-1" style="margin: 10px">
            <label for="password">Confirm Password</label>
          </div>
          <div class="col-3">
            <!-- <input name="confirmpassword" type="password" /> -->
            <input
              type="text"
              class="form-control"
              placeholder="Confirm Password"
              name="confirmpassword"
              style="margin: 10px"
            />
          </div>
        </div>

        <!--  -->
        <div class="row justify-content-center">
          <div class="col-1">
            <label for="password">Are you a member?</label>
          </div>
          <div class="col-1"><input type="checkbox" name="isMember" /></div>
        </div>
        <!--  -->

        <div class="row justify-content-center">
          <div class="col-1">
            <button class="btn btn-outline-primary" style="margin: 5px">
              Sign Up
            </button>
          </div>
        </div>
      </form>
      <div>
        <!-- if username already exists display error message  -->
        <% if(errMsg) {%>
        <h3 style="color: red; text-align: center"><%=errMsg%></h3>

        <%}%>
        <div class="row justify-content-center" id="footer">
          <%-include("./partials/footer.ejs")%>
        </div>
      </div>
    </div>
  </body>
</html>
